<h1>Welcome home</h1>

<%= link_to "What's on your mind?", new_post_path %><br>
<br>
<% @post.each do |post| %>
  <strong><%= link_to post.title, post_path(post) %></strong><br>
  <%= post.body %>
  <%= link_to "edit", edit_post_path(post) %>
  <%= link_to "delete", post_path(post), method: :delete %>
  <hr><br>
<% end %>