- javascript 'hospitals.js'
%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Home
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          - if user_signed_in?
            = content_tag(:a, current_user.email)
          - else
            = link_to "Log In", new_user_session_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Hospitals
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to "Add Hospital", new_hospital_path
              %li.divider
                %li.dropdown-header{:role => "presentation"} Hospitals 
                - @hospitals.each do |hos|
                  %li
                    = link_to "#{hos.name}", hospital_path(hos)
            %li
              = text_field_tag '', '', class: "hospital_search"
            %li  
              = link_to "find hospital", 'javascript:void(0);', class: "search_hospitals"   
      
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to "Edit", edit_user_registration_path
              %li.divider
              %li
                = link_to "Log Out", destroy_user_session_path, method: :delete
    / /.navbar-collapse
  / /.container-fluid

.row.text-center 
  .col-md-12
    %ul.search_list
    - @hospitals.each do |hos|
      .panel.panel-success.hospital_list
        .panel-heading
          %h1.panel-title 
            = link_to "#{hos.name}", hospital_path(hos)
        .panel-body
          = "#{hos.address}"
          %br
          = "#{hos.phone_number}"
        %br/




