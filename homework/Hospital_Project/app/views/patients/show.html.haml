- javascript 'Patients.js'
%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Home
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          - if user_signed_in?
            = content_tag(:a, current_user.email)
          - else
            = link_to "Log In", new_user_session_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Hospital
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li.dropdown-header{:role => "presentation"} Current Hospital
              %li
                = link_to "#{@hospital.name}'s Data", hospital_path(@hospital)
              %li
                = link_to "#{@hospital.name}'s Patients", hospital_patients_path(@hospital)              
              %li.divider
              %li
                = link_to "Hospitals Home", hospitals_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Edit
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li.dropdown-header{:role => "presentation"} Current Patient
              %li
                = link_to "#{@patient.last_name}'s Data", edit_hospital_patient_path(@hospital, @patient)
              %li
                = link_to "Remove #{@patient.last_name}", hospital_patient_path, method: :delete
              %li.divider               
              - @patient.doctors.each do |doc|
                %li
                  = link_to "#{doc.name}", destroy_doctor_hospital_patient_path(@hospital, @patient, doctor_id: doc.id), method: :delete
          %li
            = link_to "#{@patient.last_name}'s Medications", hospital_patient_medications_path(@hospital, @patient)
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to "Edit", edit_user_registration_path
              %li.divider
              %li
                = link_to "Log Out", destroy_user_session_path, method: :delete
    / /.navbar-collapse
  / /.container-fluid

.row.text-center
  .col-md-1
  .col-md-5
    .panel.panel-success
      .panel-heading
        %h1.panel-title
          = @patient.last_name
      .panel-body
      = form_for [@hospital, @patient] do |f|
        %strong          
          = f.label :first_name
          = f.label :last_name
        %br/        
        = @patient.first_name
        = @patient.last_name
        %br/
        %br/
        %strong= f.label :dob
        %br/
        = @patient.dob
        %br/
        %br/
        %strong= f.label :complaint
        %br/
        = @patient.complaint
        %br/
        %br/
        %strong= f.label :sex
        %br/
        = @patient.sex
        %br/
        %br/
        %strong= f.label :workflow_state
        %br/
        = @patient.workflow_state
        %br/
        %br/
        - if @patient.workflow_state == "pay_bill"
          %strong= "Post Discharge Commit"
          %br/
          = @patient.postdis_commit
        - else
          %strong= "Doctor Team"
          %br/
          - @patient.doctors.each do |doc|
            - if doc.name
              = doc.name
              = link_to "*remove*", destroy_doctor_hospital_patient_path(@hospital, @patient, doctor_id: doc.id), method: :delete
              %br/
  .col-md-1
  .col-md-3
    .panel.panel-success
      .panel-heading
        %h3 Add a Docter
      .panel-body
        %form.form-horizontal{:role => "form"}
        = form_for @doctor, url: create_doctor_hospital_patient_path(@hospital, @patient) do |f|    
          .form-group
            .col-md-2
            .col-sm-8.col-md-8
              = f.label :name, "Doctor coming on call"
              = f.text_field :name, class: "form-control" 
          .form-group
            .col-sm-12
              %button.btn.btn-success{:type => "submit"} Add Doctor
  .col-md-6
  .col-md-1
  .col-md-3
    .panel.panel-success
      .panel-heading
        %h3
          = "Update #{@patient.last_name}'s Status"
      .panel-body
        %form.form-horizontal{:role => "form"}
          = form_for [@hospital, @patient] do |f|
            .form-group
            .col-md-2
            .col-sm-8.col-md-8
              - if @patient.workflow_state == "waiting_room"
                = link_to "seeing dr", with_dr_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "admit", admitted_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "with_dr"
                = link_to "admit", admitted_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "Testing", test_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "surgery", surgery_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "discharging", prep_dis_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "admitted"
                = link_to "dr confrence", with_dr_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "Testing", test_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "surgery", surgery_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "discharging", prep_dis_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "test"
                = link_to "dr confrence", with_dr_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "admit", admitted_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "surgery", surgery_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "surgery"
                = link_to "dr confrence", with_dr_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "admit", admitted_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "Testing", test_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "prep_dis"
                = link_to "admit", admitted_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "dr confrence", with_dr_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "Testing", test_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "surgery", surgery_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
                %br/
                = link_to "Paying", pay_bill_hospital_patient_path, method: :put, :class => "btn btn-primary btn-xs"
              - if @patient.workflow_state == "pay_bill"  
                = f.label :postdis_commit
                = f.text_field :postdis_commit
    